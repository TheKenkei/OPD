{
    "extends": "@taiga-ui/tsconfig",
    "include": ["projects/**/*"],
    "compileOnSave": false,
    "exclude": ["projects/**/*.spec.ts", "projects/server-e2e/**", "projects/client-e2e/**", "projects/server"],
    "compilerOptions": {
        "typeRoots": ["node_modules/@types"],
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {}
    },
    "exclude": ["node_modules", "tmp"]
}
